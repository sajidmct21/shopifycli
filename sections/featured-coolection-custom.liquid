{% schema %}
{
  "name": "Featured Collection own",
  "tag": "section",
  "settings": [
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "number",
      "id": "product_count",
      "label": "Number of Products to Display",
      "default": 4,
    }
  ],
  "presets": [
    {
      "name": "Featured Collection own"
    }
  ]
}
{% endschema %}

<style>
  .custom-featured-collection .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
    gap: 20px;
    padding: 20px;
  }

  .custom-product-card {
    border: 1px solid #eee;
    transition: all 0.3s ease;
    position: relative;
    background: #fff;
    overflow: hidden;
    border-radius: 8px;
  }

  .custom-product-card .image-wrapper {
    position: relative;
    overflow: hidden;
  }

  .custom-product-card .product-image {
    width: 100%;
    height: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .custom-product-card .add-to-cart-form {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    display: none;
    z-index: 5;
  }

  .custom-product-card .add-to-cart-button {
    background-color: black;
    color: white;
    border: none;
    padding: 10px 15px;
    font-size: 14px;
    cursor: pointer;
    border-radius: 4px;
    opacity: 0.9;
  }

  .custom-product-card .image-wrapper:hover .add-to-cart-form {
    display: block;
  }

  .custom-product-card .image-wrapper:hover .product-image {
    transform: scale(1.05);
  }

  .custom-product-card .product-info {
    padding: 12px;
    text-align: center;
  }

  .custom-product-card .product-title {
    font-size: 16px;
    margin: 0;
    color: #222;
  }

  .custom-product-card .product-title a {
    text-decoration: none;
    color: inherit;
  }

  .custom-product-card .product-price {
    color: #888;
    margin-top: 5px;
    font-size: 14px;
  }

  @media (max-width: 768px) {
    .custom-featured-collection .product-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .custom-featured-collection .product-grid {
      grid-template-columns: 1fr;
    }

    .custom-product-card .add-to-cart-button {
      padding: 8px 12px;
      font-size: 13px;
    }

    .custom-product-card .product-title {
      font-size: 14px;
    }

    .custom-product-card .product-price {
      font-size: 13px;
    }
  }
</style>

{% if section.settings.collection %}
  <div class="custom-featured-collection">
    <div class="product-grid">
      {% for product in section.settings.collection.products | slice: 0, section.settings.product_count %}
        <div class="custom-product-card">
          <div class="image-wrapper">
            <a href="{{ product.url }}">
              {{ product.featured_image | image_url: width: 600 | image_tag: class: 'product-image' }}
            </a>
            {% if product.available %}
              <form method="post" action="/cart/add" class="add-to-cart-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="add-to-cart-button">Add to Cart</button>
              </form>
            {% else %}
              <div class="add-to-cart-form">
                <span style="background:#999;color:#fff;padding:10px 15px;border-radius:4px;">Sold Out</span>
              </div>
            {% endif %}
          </div>
          <div class="product-info">
            <h3 class="product-title">
              <a href="{{ product.url }}">{{ product.title }}</a>
            </h3>
            <p class="product-price">{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
{% else %}
  <p>Please select a collection.</p>
{% endif %}
