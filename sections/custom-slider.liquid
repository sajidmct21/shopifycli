{% schema %}
{
  "name": "Image Slider",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Slider Heading",
      "default": "Our Gallery"
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Slide Image"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Image Slider Section",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="custom-slider-section">
  <div class="slider-header">
    <h2>{{ section.settings.heading }}</h2>
    <div class="slider-controls">
      <button class="slider-prev">←</button>
      <button class="slider-next">→</button>
    </div>
  </div>

  <div class="slider-wrapper">
    <div class="slider-track">
      {% for block in section.blocks %}
        {% if block.settings.image %}
          <div class="slide">
            {{ block.settings.image | image_url | image_tag: width: 800, height: 500 | append: forloop.index }}
          </div>
        {% endif %}
      {% endfor %}

      {%- comment -%}
        Clone first slide for smooth looping
      {%- endcomment -%}
      {% assign first_block = section.blocks | first %}
      {% if first_block.settings.image %}
        <div class="slide">
          {{ first_block.settings.image | image_tag: width: 800, height: 500, crop: "center", class: "slider-img", alt: "Cloned Slide" }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
.custom-slider-section {
  padding: 30px;
}
.slider-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}
.slider-header h2 {
  font-size: 1.8rem;
}
.slider-controls button {
  background-color: black;
  color: white;
  border: none;
  padding: 8px 12px;
  margin-left: 5px;
  cursor: pointer;
}
.slider-wrapper {
  overflow: hidden;
  position: relative;
  max-width: 800px;
  margin: auto;
}
.slider-track {
  display: flex;
  transition: transform 0.5s ease-in-out;
}
.slide {
  min-width: 100%;
  flex-shrink: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.slider-img {
  width: 800px;
  height: 500px;
  object-fit: cover;
  display: block;
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function () {
  const track = document.querySelector('.slider-track');
  const slides = document.querySelectorAll('.slide');
  const totalSlides = slides.length;
  const nextBtn = document.querySelector('.slider-next');
  const prevBtn = document.querySelector('.slider-prev');
  let index = 0;
  let allowTransition = true;

  function updateSlider(withTransition = true) {
    if (withTransition) {
      track.style.transition = 'transform 0.5s ease-in-out';
    } else {
      track.style.transition = 'none';
    }
    track.style.transform = `translateX(-${index * 100}%)`;
  }

  function nextSlide() {
    if (index >= totalSlides - 1) {
      index++;
      updateSlider();
      setTimeout(() => {
        index = 0;
        updateSlider(false);
      }, 500);
    } else {
      index++;
      updateSlider();
    }
  }

  function prevSlide() {
    if (index <= 0) {
      index = totalSlides - 1;
      updateSlider(false);
      setTimeout(() => {
        index--;
        updateSlider();
      }, 50);
    } else {
      index--;
      updateSlider();
    }
  }

  nextBtn?.addEventListener('click', nextSlide);
  prevBtn?.addEventListener('click', prevSlide);

  setInterval(nextSlide, 4000);
});
</script>
